pipeline {
    agent any

    tools {
        // Ensure 'Maven' and 'Java' match the names in Global Tool Configuration
        maven 'Maven'
        jdk 'Java'
    }

    stages {
        stage('Checkout Source') {
            steps {
                // Pull code from your GitHub repository
                git 'https://github.com/prakashpaw/my-cool-app.git'
            }
        }

        stage('Maven Build') {
            steps {
                // Build the WAR file
                sh 'mvn clean package'
            }
        }

        stage('Deploy to Docker Host') {
            steps {
                // Use Publish Over SSH to send artifact and run commands
                sshPublisher(publishers: [
                    sshPublisherDesc(
                        configName: 'DockerHost', // Must match name in System Config
                        transfers: [
                            sshTransfer(
                                cleanRemote: false,
                                excludes: '',
                                execCommand: '''
                                    cd /opt/docker;
                                    docker rm -f registerapp || true;
                                    docker build -t regapp:v1 .;
                                    docker run -d --name registerapp -p 8087:8080 regapp:v1
                                ''', // Commands to rebuild container
                                execTimeout: 120000,
                                flatten: false,
                                makeEmptyDirs: false,
                                noDefaultExcludes: false,
                                patternSeparator: '[, ]+',
                                remoteDirectory: '/opt/docker', // Path on Ubuntu Docker host
                                remoteDirectorySDF: false,
                                removePrefix: 'webapp/target', // Path to your WAR file
                                sourceFiles: 'webapp/target/*.war'
                            )
                        ],
                        usePromotionTimestamp: false,
                        useWorkspaceInPromotion: false,
                        verbose: true
                    )
                ])
            }
        }
    }
}

